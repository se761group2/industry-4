{
    "name": "industry4",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@apollo/client": "^3.0.2",
        "@capacitor/core": "2.2.0",
        "@graphql-codegen/typescript": "^1.17.0",
        "@ionic/react": "^5.0.7",
        "@ionic/react-router": "^5.0.7",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.4.0",
        "@testing-library/user-event": "^8.0.3",
        "@types/jest": "^24.0.25",
        "@types/node": "^12.12.24",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "@types/react-router": "^5.1.4",
        "@types/react-router-dom": "^5.1.3",
        "apollo-link-batch-http": "^1.2.14",
        "firebase": "^7.19.1",
        "ionicons": "^5.0.0",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "react-router": "^5.1.2",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.4.0",
        "typescript": "3.8.3",
        "url-join": "^4.0.1"
    },
    "scripts": {
        "precommit": "lint-staged",
        "start": "npm run build:css && react-scripts start",
        "build": "npm run build:css && react-scripts build",
        "build:css": "postcss src/theme/tailwind.css -o src/theme/main.css",
        "watch:css": "postcss src/theme/tailwind.css -o src/theme/main.css",
        "test": "react-scripts test --passWithNoTests",
        "eject": "react-scripts eject",
        "lint": "eslint '*/**/*.{js,ts,tsx}'",
        "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "generate": "rimraf src/types && apollo client:codegen --target=typescript --endpoint=http://localhost:5001/industry4-uoa/us-central1/graph --outputFlat src/types && npm run introspect",
        "introspect": "graphql-codegen --config codegen.yml"
    },
    "lint-staged": {
        "*.+(js|jsx|ts|tsx)": [
            "eslint --fix"
        ],
        "*.+(json|html|md)": [
            "prettier --write"
        ]
    },
    "jest": {
        "transformIgnorePatterns": [
            "node_modules/(?!@apollo)"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@capacitor/cli": "2.2.0",
        "@graphql-codegen/cli": "^1.17.0",
        "@graphql-codegen/fragment-matcher": "^1.17.0",
        "@graphql-codegen/introspection": "^1.17.0",
        "apollo": "^2.28.3",
        "autoprefixer": "^9.8.6",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.3",
        "lint-staged": "^10.2.11",
        "postcss-cli": "^7.1.2",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "tailwindcss": "^1.7.6"
    },
    "description": "An Ionic project"
}
