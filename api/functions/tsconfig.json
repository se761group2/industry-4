{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["esnext"],
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src", "src/graphql/schema.graphql"]
}
